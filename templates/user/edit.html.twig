{% extends 'base.html.twig' %}

{% block title %}Edition du profile{% endblock %}

{% block body %}

    <div class="container">
        <h2 class="my-5 text-center">Edition du profile</h2>

        <div class="row">
            <div class="col-md-4">
                {{ form_start(form) }}
                    <div class="card">
                        <img src="
                           {% if app.user.avatar %}
                               {{ asset(app.user.avatarFile) }}
                           {% else %}
                               {{ asset('img/users/avatar.jpg') }}
                           {% endif %}
                         " alt="Avatar de {{ app.user.fullName }}" class="p-3 img-fluid card-img">

                        <div class="card-body">
                            <p class="card-text">Changer d'avatar :</p>
                            {{ form_widget(form.avatar) }}
                        </div>
                    </div>
            </div>

            <div class="col-md-8">
                    <div class="card">
                        <div class="card-body">
                            {{ form_widget(form) }}

                            <button type="submit" class="btn btn-success float-right mt-2">Enregistrer les changements</button>
                        </div>
                    </div>
            </div>
            {{ form_end(form) }}
        </div>

        <div class="row my-5">
            <div class="col">
                <a href="{{ path('user_password') }}" class="btn btn-primary">Changer mon mot de passe</a>
                <a href="{{ path('user_favorite') }}" class="btn btn-primary">Voir mes événements</a>
            </div>
        </div>

    </div>

{% endblock %}